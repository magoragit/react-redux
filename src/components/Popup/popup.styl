.popup {
  width: 400px;
  height: 300px;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background: #fff;
  z-index: 1001;

  &-close {
    position: absolute;
    top: -20px;
    right: 0;
    cursor: pointer;
  }

  &-wrapper {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: rgba(#000, 0.4);
    z-index: 1000;
    display: none;

    &_open {
      display: block;
    }
  }
}